@using Woo.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Lang

@model IEnumerable<Woo.Models.Seller>
@{
    ViewData["Title"] = @Lang["sellers"];
}
<p class="h2 text-center font-weight-bold pt-lg-5">@ViewData["Title"]</p>
<div>
    <p class="h4 float-right">
        <a asp-action="Create">@Lang["New"] @ViewData["Title"]</a>
    </p>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SellerNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comment1)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellerNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment1)
                    </td>
                    <td>
                        @*<a asp-action="Edit" asp-route-id="@item.SellerId">@Lang["edit"]</a> |*@
                        <a asp-action="Details" asp-route-id="@item.SellerId">@Lang["details"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
