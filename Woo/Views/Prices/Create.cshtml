@using Woo.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Lang

@model Woo.Models.Price
@{
    ViewData["Title"] = @Lang["Create"] + " " + @Lang["Prices"];
}
<p class="h2 text-center font-weight-bold pt-lg-5">@ViewData["Title"]</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PriceNum" class="control-label"></label>
                <input asp-for="PriceNum" class="form-control" />
                <span asp-validation-for="PriceNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemObj.EName" class="control-label"></label>
                <select asp-for="ItemId" class="form-control"
                        asp-items="@(new SelectList(@ViewBag.itemlist,"ItemId", "EName"))">
                </select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemPrice" class="control-label"></label>
                <input asp-for="ItemPrice" class="form-control" />
                <span asp-validation-for="ItemPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@Lang["Create"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Lang["BTL"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
