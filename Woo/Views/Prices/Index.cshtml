@using Woo.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Lang

@model IEnumerable<Woo.Models.Price>
@{
    ViewData["Title"] = @Lang["Prices"];
}
<p class="h2 text-center font-weight-bold pt-lg-5">@ViewData["Title"]</p>

<div>
    <p class="h4 float-right">
        <a asp-action="Create">@Lang["Create"]</a>
    </p>
</div>


<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PriceNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemObj.EName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataComment)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemObj.EName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataComment)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PriceId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PriceId">@Lang["Details"]</a> |
                        @*<a asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
