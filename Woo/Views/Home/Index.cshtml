@model Woo.Controllers.HomeController
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@* @using Woo.Resources*@

@inject SignInManager<ApplicationUser> SignInManager
@*@inject IViewLocalizer _localizer2rr*@
@*@inject IStringLocalizer<SharedResources> SharedLocalizerrr*@
@*@inject IHtmlLocalizer<SharedResources> SharedHtmlLocalizerviewrr*@


@using Woo.Resources
@*@using Microsoft.Extensions.Localization*@
@inject IStringLocalizer<SharedResources> Lang
@inject IHtmlLocalizer<SharedResources> Lang2

@{
    ViewData["Title"] = "Woo Home";
}


<section class="page-section portfolio" id="portfolio">
    <div class="container">

        <!-- Portfolio Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">



            @*@SharedLocalizerrr["head"]  8 @SharedHtmlLocalizerviewrr["head"]*@


            @Lang["yourdesk"] *** @Lang2["yourdesk"]

        </h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Portfolio Grid Items-->
        <div class="row">


            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
            {
                <!-- Sellers -->
                <div class="col-md-6 col-lg-4 mb-5">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Sellers" asp-action="Index">
                        <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/assets/img/account.png" alt="Sellers" />
                        </div>
                    </a>
                </div>

                <!-- Users -->
                <div class="col-md-6 col-lg-4 mb-5">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">
                        <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/assets/img/user.png" alt="Sellers" />
                        </div>
                    </a>
                </div>

                <!-- Devices -->
                <div class="col-md-6 col-lg-4 mb-5">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Devices" asp-action="Index">
                        <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/assets/img/device.png" alt="Sellers" />
                        </div>
                    </a>
                </div>

                <!-- Warehouse -->
                <div class="col-md-6 col-lg-4 mb-5">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Warehouses" asp-action="Index">
                        <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/assets/img/device.png" alt="Sellers" />
                        </div>
                    </a>
                </div>

                <!-- Reports -->
                <div class="col-md-6 col-lg-4 mb-5">
                    <a class="nav-link text-dark" asp-area="" asp-controller="ReportHeads" asp-action="Index">
                        <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/assets/img/report.png" alt="Sellers" />
                        </div>
                    </a>
                </div>

            }

            @if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
            {
                <!-- Items -->
                <div class="col-md-6 col-lg-4 mb-5">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Items" asp-action="Index">
                        <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/assets/img/item.png" alt="Sellers" />
                        </div>
                    </a>
                </div>

                <!-- Prices-->
                <div class="col-md-6 col-lg-4 mb-5">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Prices" asp-action="Index">
                        <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/assets/img/price.png" alt="Sellers" />
                        </div>
                    </a>
                </div>

                <!-- Customers -->
                <div class="col-md-6 col-lg-4 mb-5">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">
                        <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/assets/img/customer.jpg" alt="Sellers" />
                        </div>
                    </a>
                </div>

                <!-- Invoices -->
                <div class="col-md-6 col-lg-4 mb-5">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Invoices" asp-action="List">
                        <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/assets/img/invoice.jpg" alt="Sellers" />
                        </div>
                    </a>
                </div>

                <!-- Receives -->
                <div class="col-md-6 col-lg-4 mb-5">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Receives" asp-action="Index">
                        <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/assets/img/device.png" alt="Sellers" />
                        </div>
                    </a>
                </div>

                <!-- Reports -->
                <div class="col-md-6 col-lg-4 mb-5">
                    <a class="nav-link text-dark" asp-area="" asp-controller="ReportHeads" asp-action="UserIndex">
                        <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="~/assets/img/report.png" alt="Sellers" />
                        </div>
                    </a>
                </div>

            }

        </div>  <!-- Row End-->
    </div>
</section>
